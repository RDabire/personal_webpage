---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { defaultLanguage, useTranslations, type LanguageCode } from '@/i18n/ui';
import { buttonVariants } from '@/components/ui/button';
import { ArrowLeft } from 'lucide-react';

const lang =
  (Astro.currentLocale as LanguageCode | undefined) ?? defaultLanguage;
const t = useTranslations(lang, 'notFoundPage');

const pageTitle = t('pageTitle');
const pageDescription = t('message');
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <section class="content-shell page-intro">
    <h1 class="headline-display max-w-3xl">{t('title')}</h1>
    <p class="lede">{t('message')}</p>

    <a
      href="/"
      class={buttonVariants({ variant: 'default', size: 'lg' }) + ' mt-8 w-fit'}
    >
      <ArrowLeft className="mr-2 size-4" />
      {t('homeLink')}
    </a>
  </section>
</BaseLayout>
