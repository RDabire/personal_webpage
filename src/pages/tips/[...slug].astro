---
import TipLayout from '@/features/tips/layouts/TipLayout.astro';
import { defaultLanguage } from '@/i18n/ui';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const tips = await getCollection('tips', ({ data }) => {
    return data.isDraft !== true && data.lang === defaultLanguage;
  });

  return tips.map((tip) => ({
    params: {
      slug:
        tip.id.split('/').length > 1
          ? tip.id.split('/').slice(1).join('/')
          : tip.id,
    },
    props: { tip },
  }));
}

const { tip } = Astro.props;
---

<TipLayout tip={tip} />
