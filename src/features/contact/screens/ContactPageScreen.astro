---
import { CalendarDays, ArrowUpRight } from 'lucide-react';

interface Props {
  mainHeadingTitle: string;
  mainHeadingDescription: string;
  calendarTitle: string;
  calendarDescription: string;
  calendarBookingUrl: string;
}

const {
  mainHeadingTitle,
  mainHeadingDescription,
  calendarTitle,
  calendarDescription,
  calendarBookingUrl,
} = Astro.props;
---

<section class="content-shell page-intro">
  <h1 class="headline-display max-w-4xl">{mainHeadingTitle}</h1>
  <p class="lede">{mainHeadingDescription}</p>
</section>

<section class="content-shell reveal">
  <article class="panel mx-auto max-w-3xl space-y-4">
    <div
      class="inline-flex w-fit items-center gap-2 rounded-full border border-border bg-muted/50 px-3 py-1 text-xs uppercase tracking-[0.14em] text-muted-foreground"
    >
      <CalendarDays class="size-3.5" />
      Google Calendar
    </div>
    <h2 class="section-title text-xl">{calendarTitle}</h2>
    <p class="text-sm leading-relaxed text-muted-foreground">
      {calendarDescription}
    </p>
    <a
      href={calendarBookingUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 rounded-xl bg-primary px-4 py-2.5 text-sm font-semibold text-primary-foreground hover:bg-primary/90"
    >
      Book on Google Calendar
      <ArrowUpRight class="size-4" />
    </a>
  </article>
</section>
